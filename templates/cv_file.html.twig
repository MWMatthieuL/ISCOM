{% extends 'base.html.twig' %}

{% block title %}Document de l'offre{% endblock %}

{% block body %}
    <style>
        #view_file{
            width: 100%;
            height: 100%;
            position: relative;
        }
        #view_file a   {
            position: absolute;
            top: -75px;
            left: 0;
            z-index: 1000;
        }
        #view_file embed, #view_file #empty {
            min-height: 90%;
            min-width: 30%;
            background-color: #ebebeb
        }

        #view_file #empty {
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: center;
        }
    </style>
    <div id="view_file">
        <a href="{{ path('offer_matchs', { id : offer.id }) }}" class="btn btn-danger btn-lg">Retour</a>
        {% if file is not null %}
            <embed src="{{ asset(file | replace({'/app/public':''})) }}" width="100%" height="100%"/>
        {% else %}
            <div id="empty" style="text-align: center">
                Aucun CV n'a été joint.
            </div>
        {% endif %}
    </div>
{% endblock %}